
RewriteEngine on

# This is for languages
RewriteRule ^(en|nl|..)/(.*)$ $2?lang=$1 [QSA]

# Making sure things are redirected to php files
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}\/web%{REQUEST_URI} -f
RewriteRule ^(.*)$ /web/$1

# Making sure things are redirected to php files
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}\/web%{REQUEST_URI}\.php -f
RewriteRule ^(.*)$ /web/$1.php

# This is for the database IDs
RewriteRule api/(.*)/([0-9]*)/to_(events|activities|peoples|parents|children|locations|specials)$ web/api/$1.php?id=$2&to=$3 [QSA]
RewriteRule api/(.*)/([0-9]*)$ web/api/$1.php?id=$2 [QSA]